{
  "info": {
    "name": "Ethioconnect UserService",
    "description": "Postman collection for the Ethioconnect_userService API (Auth + Users). Update {{baseUrl}} and {{token}} in your environment.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "ethio-user-service-collection"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "token", "value": "" },
    { "key": "testUserId", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "description": "Authentication related endpoints",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"johndoe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"+251912345678\",\n  \"password\": \"secret123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api","v1","auth","register"]
            }
          },
          "response": []
        },
        {
          "name": "Login (email/password)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"secret123\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/v1/auth/login", "host": ["{{baseUrl}}"], "path": ["api","v1","auth","login"] }
          },
          "response": []
        },
        {
          "name": "Token Login (phone + token)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+251912345678\",\n  \"token\": \"<token-from-other-system>\"\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/v1/auth/token-login", "host": ["{{baseUrl}}"], "path": ["api","v1","auth","token-login"] }
          },
          "response": []
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}" },
            "url": { "raw": "{{baseUrl}}/api/v1/auth/refresh-token", "host": ["{{baseUrl}}"], "path": ["api","v1","auth","refresh-token"] }
          },
          "response": []
        },
        {
          "name": "Get Current User (me)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/v1/auth/me", "host": ["{{baseUrl}}"], "path": ["api","v1","auth","me"] }
          },
          "response": []
        },
        {
          "name": "Check Username Availability",
          "request": {
            "method": "GET",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/api/v1/auth/check-username/johndoe", "host": ["{{baseUrl}}"], "path": ["api","v1","auth","check-username","johndoe"] }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Users",
      "description": "User management endpoints",
      "item": [
        {
          "name": "Search Users",
          "request": {
            "method": "GET",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/search?q=john&limit=10&offset=0",
              "host": ["{{baseUrl}}"],
              "path": ["api","v1","users","search"],
              "query": [
                { "key": "q", "value": "john" },
                { "key": "limit", "value": "10" },
                { "key": "offset", "value": "0" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get User By ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/v1/users/{{testUserId}}", "host": ["{{baseUrl}}"], "path": ["api","v1","users","{{testUserId}}"] }
          },
          "response": []
        },
        {
          "name": "Update User Status (admin)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"active\"  // allowed: active, inactive, suspended\n}"
            },
            "url": { "raw": "{{baseUrl}}/api/v1/users/{{testUserId}}/status", "host": ["{{baseUrl}}"], "path": ["api","v1","users","{{testUserId}}","status"] }
          },
          "response": []
        },
        {
          "name": "Users Stats Summary (admin)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": { "raw": "{{baseUrl}}/api/v1/users/stats/summary", "host": ["{{baseUrl}}"], "path": ["api","v1","users","stats","summary"] }
          },
          "response": []
        }
      ]
    }
  ]
}
