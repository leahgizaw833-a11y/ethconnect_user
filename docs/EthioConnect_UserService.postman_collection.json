{
  "info": {
    "name": "EthioConnect_UserService",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"phone\": \"0912345678\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Request OTP",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/otp/request",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "otp", "request"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"0912345678\"\n}"
        }
      }
    },
    {
      "name": "Verify OTP",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/otp/verify",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "otp", "verify"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"0912345678\",\n  \"otp\": \"123456\"\n}"
        }
      }
    },
    {
      "name": "Login with OTP",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/otp/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "otp", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"0912345678\",\n  \"otp\": \"123456\"\n}"
        }
      }
    },
    {
      "name": "Login with Token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/token-login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "token-login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"0912345678\",\n  \"token\": \"{{accessToken}}\"\n}"
        }
      }
    },
    {
      "name": "Refresh Token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/refresh-token",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "refresh-token"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
        }
      }
    },
    {
      "name": "Get Current User",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{accessToken}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/me",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "me"]
        }
      }
    },
    {
      "name": "Check Username",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/auth/check-username/testuser",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "check-username", "testuser"]
        }
      }
    }
  ]
}